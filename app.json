{
  "expo": {
    "name": "pinme",
    "slug": "pinme",
    "version": "10.18.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Used to scan QR codes for device provisioning and configuration.",
        "NSMicrophoneUsageDescription": "Used for voice command recognition to perform quick actions."
      }
    },
  "android": {
    "package": "com.pinme.app",
    "versionCode": 101801,
    "permissions": [
      "CAMERA",
      "INTERNET",
      "NFC",
      "RECORD_AUDIO",
      "MODIFY_AUDIO_SETTINGS",
      // BLE & Wiâ€‘Fi related permissions
      "BLUETOOTH",
      "BLUETOOTH_ADMIN",
      "BLUETOOTH_CONNECT",
      "BLUETOOTH_SCAN",
      "ACCESS_FINE_LOCATION",
      "ACCESS_COARSE_LOCATION",
      "NEARBY_WIFI_DEVICES",
      "ACCESS_WIFI_STATE",
      "CHANGE_WIFI_STATE"
    ],
    "adaptiveIcon": {
      "foregroundImage": "./assets/adaptive-icon.png",
      "backgroundColor": "#ffffff"
    },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-dev-client",
      "expo-font",
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 36,
            "targetSdkVersion": 36,
            "buildToolsVersion": "36.0.0"
          }
        }
      ],
      "expo-camera",
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "Allow reading NFC tags for RFID features"
        }
      ],
      "./plugins/withAndroidManifestFix",
      "react-native-ble-plx",
      "react-native-wifi-reborn"
    ],
    "extra": {
      "eas": {
        "projectId": "bcc95b6f-9d98-434b-9b1a-39a19ceb4364"
      },
